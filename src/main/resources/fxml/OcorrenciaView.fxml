<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sosrota.ui.controllers.OcorrenciaController"
            prefWidth="1000" prefHeight="700"
            stylesheets="@/css/styles.css">

    <top>
        <VBox style="-fx-background-color: #f5f5f5; -fx-padding: 15;">
            <Label text="Cadastro de Ocorrências" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: white; -fx-background-radius: 5;">
                <Label text="Dados da Ocorrência" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Separator/>
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100" prefWidth="120"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="30"/>
                        <RowConstraints minHeight="30"/>
                        <RowConstraints minHeight="30"/>
                        <RowConstraints minHeight="30"/>
                        <RowConstraints minHeight="80"/>
                    </rowConstraints>
                    <Label text="Tipo:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="tipoField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    <Label text="Gravidade:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <ComboBox fx:id="gravidadeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <Label text="Bairro:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <ComboBox fx:id="bairroComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <Label text="Local:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextField fx:id="localField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    <Label text="Observação:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <TextArea fx:id="observacaoField" GridPane.columnIndex="1" GridPane.rowIndex="4" prefRowCount="3"/>
                </GridPane>
                <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
                    <Button text="Novo" onAction="#novo" style="-fx-pref-width: 80;"/>
                    <Button text="Salvar" onAction="#salvar" style="-fx-pref-width: 80;"/>
                    <Button text="Editar" onAction="#editar" style="-fx-pref-width: 80;"/>
                    <Button text="Cancelar Ocorrência" onAction="#cancelarOcorrencia" style="-fx-pref-width: 150;"/>
                    <Button text="Excluir" onAction="#excluir" style="-fx-pref-width: 80;"/>
                </HBox>
            </VBox>

            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <Label text="Ocorrências Cadastradas" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
                        <TableColumn fx:id="tipoColumn" text="Tipo" prefWidth="150"/>
                        <TableColumn fx:id="gravidadeColumn" text="Gravidade" prefWidth="100"/>
                        <TableColumn fx:id="bairroColumn" text="Bairro" prefWidth="150"/>
                        <TableColumn fx:id="localColumn" text="Local" prefWidth="200"/>
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="120"/>
                        <TableColumn fx:id="dataHoraColumn" text="Data/Hora" prefWidth="150"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 15;">
            <Button text="Fechar" onAction="#fechar" style="-fx-pref-width: 100;"/>
        </HBox>
    </bottom>

</BorderPane>

